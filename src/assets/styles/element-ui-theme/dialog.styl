/* 对话框头部样式 */
.my-el-dialog
  .el-dialog__header
    text-align center
    vertical-align middle
    background-color var(--skin)
    padding 0
    line-height: 50px;
    .el-dialog__title
      line-height 35px
      font-size 15px
      color white
    .el-dialog__headerbtn
      top 0
      right 10px
      line-height 35px
      .el-dialog__close
        color white
  .el-dialog__body
    padding 20px

/* 消息弹框 */
.my-el-dialog-msgbox
  .el-message-box__header
    .el-message-box__headerbtn
      &:hover
        .el-message-box__close.el-icon-close
          color var(--skin)
  .el-message-box__btns
    margin-top 10px
    .my-button
      padding-left 35px
      padding-right 35px
      margin-left 30px
      margin-right 30px
